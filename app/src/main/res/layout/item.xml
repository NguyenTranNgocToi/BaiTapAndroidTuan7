<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view"
        android:layout_width="389dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bgitem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewItem"
        android:layout_width="141dp"
        android:layout_height="26dp"
        android:text="1. Đà Lạt "
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.512" />

    <ImageButton
        android:id="@+id/imageButton1Item"
        android:layout_width="52dp"
        android:layout_height="54dp"
        android:layout_marginStart="108dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/textViewItem"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/imgbutton1" />

    <ImageButton
        android:id="@+id/imageButton2Item"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageButton1Item"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/imgbutton2" />

</androidx.constraintlayout.widget.ConstraintLayout>